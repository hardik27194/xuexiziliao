<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_video_seek_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_tip_left"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:background="@color/colorClean"
        android:src="@drawable/huakuai"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
         />
    <ImageView
        android:id="@+id/iv_tip_right"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:background="@color/colorClean"
        android:src="@drawable/huakuai"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
    <com.liubowang.dubbing.JianJi.VideoFrameView
        android:id="@+id/vfv_frame_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tmr_ruler_view"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        />

    <com.liubowang.dubbing.JianJi.TimeRulerView
        android:id="@+id/tmr_ruler_view"
        android:layout_width="0dp"
        android:layout_height="60px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/iv_tip_left"
        android:background="@color/colorBlack"/>
    <RelativeLayout
        android:id="@+id/rl_left_mask_view"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/iv_tip_left"
        android:layout_alignParentBottom="true"
        android:background="@color/colorClean"
        android:visibility="visible">
        <FrameLayout
            android:id="@+id/fl_l_1"
            android:layout_width="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1px"
            android:layout_height="60px"
            android:background="@color/colorClean"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/fl_l_1"
            android:layout_marginRight="1px"
            android:background="#AAFFFFFF"/>
        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#AAFFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_right_mask_view"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/iv_tip_left"
        android:layout_alignParentBottom="true"
        android:background="@color/colorClean"
        android:visibility="visible">
        <FrameLayout
            android:id="@+id/fl_r_1"
            android:layout_width="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1px"
            android:layout_height="60px"
            android:background="@color/colorClean"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/fl_r_1"
            android:layout_marginLeft="1px"
            android:background="#AAFFFFFF"/>
        <FrameLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="#AAFFFFFF"/>
    </RelativeLayout>


</RelativeLayout>